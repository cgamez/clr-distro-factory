pipeline {
    agent { label 'clr-builders' }

    environment {
        NAMESPACE = "${JOB_NAME}"
        WORK_DIR = "${WORKSPACE}"
    }

    stages {
        stage('Prologue') {
            steps {
                sh 'release/prologue.sh'
            }
        }
        stage('Create Update Stream') {
            steps {
                sh 'release/mixer.sh'
            }
        }
        stage('Create Images') {
            steps {
                sh 'release/ister.sh'
            }
        }
        stage('Stage') {
            steps {
                sh 'release/stage.sh'
            }
        }
        stage('Publish') {
            steps {
                sh 'release/publish.sh'
            }
        }
    }

    post {
        always {
            echo "Release Pipeline OUT - ${env.BUILD_TAG}"
        }
    }
}
