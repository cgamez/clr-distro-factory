pipeline {
    agent { label 'clr-builders' }

    environment {
        BUILD_DIR = "/var/work/${JOB_NAME}"
        STAGING_DIR = "/var/www/html/${JOB_NAME}"
    }

    stages {
        stage('Prologue') {
            steps {
                sh 'release/prologue.sh'
            }
        }
        stage('Create Update Stream') {
            steps {
                sh 'release/mixer.sh'
            }
        }
        stage('Create Images') {
            steps {
                sh 'release/ister.sh'
            }
        }
        stage('Stage') {
            steps {
                sh 'release/stage.sh'
            }
        }
    }

    post {
        always {
            echo "Release Pipeline OUT - ${env.BUILD_TAG}"
        }
    }
}
