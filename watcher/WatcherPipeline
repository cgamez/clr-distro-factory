pipeline {
    agent { label 'clr-builders' }

    stages {
        stage('Watcher') {
            steps {
                script {
                   def ret = sh script: 'watcher/watcher.sh', returnStatus: true
                   if (ret == 1) {
                       currentBuild.result = 'UNSTABLE'
                   } else if (ret > 1) {
                       currentBuild.result = 'FAILURE'
                   }
                }
            }
        }
    }

    post {
        unstable {
            build "${RELEASE_JOB}"
        }
    }
}
